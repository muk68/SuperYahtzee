                    <!--<Label x:Name="Label" Content="{Binding Number, UpdateSourceTrigger=PropertyChanged}" Canvas.Top="12" Height="24" Width="28"/>-->
                </Canvas>
            </Border>
        </Border>
    </Border>
</UserControl>
